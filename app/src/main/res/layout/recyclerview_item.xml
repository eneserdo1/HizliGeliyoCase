<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="180dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/recyclerview_image_product"
        android:layout_width="match_parent"
        android:layout_height="118dp" />
    <TextView
        android:id="@+id/recyclerview_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="3"
        android:text="Nike Pegasus 37 EU291"/>
    <TextView
        android:id="@+id/recyclerview_textview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/blue"
        android:text="879,99 TL"/>

</LinearLayout>